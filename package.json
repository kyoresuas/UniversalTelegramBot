{
  "name": "universal-telegram-bot",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "lint": "npx eslint .",
    "dev": "npx cross-env ENV=development nodemon -q",
    "build": "npx tsc && npx tsconfig-replace-paths -s ./src",
    "pre-start": "npx cross-env ENV=preproduction node dist/main.js",
    "start": "npx cross-env ENV=production node dist/main.js",
    "deploy": "node ./scripts/deploy.js",
    "typeorm": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d ./src/constants/appDataSource.ts",
    "migration:generate": "npm run typeorm migration:generate ./src/migrations/migration",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "schema:sync": "npm run typeorm schema:sync",
    "schema:log": "npm run typeorm schema:log"
  },
  "dependencies": {
    "awilix": "^11.0.0",
    "awilix-manager": "^5.5.0",
    "chalk": "4.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.11",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "telegraf": "^4.16.3",
    "typeorm": "0.3.20",
    "uuid": "^11.0.3",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.18.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1"
  }
}
